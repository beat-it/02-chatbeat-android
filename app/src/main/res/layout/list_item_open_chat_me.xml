<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/text_open_chat_date"
        android:text="February 22nd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textSize="14sp" />
    <RelativeLayout
        android:layout_below="@+id/text_open_chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/image_open_chat_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_open_chat_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terry"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/openChatNicknameOther"
            android:layout_toEndOf="@id/image_open_chat_profile"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/text_open_chat_message"
            android:text="message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/openChatText"
            android:layout_below="@id/text_open_chat_nickname"
            android:layout_alignStart="@id/text_open_chat_nickname" />


        <TextView
            android:text="11:36"
            android:id="@+id/text_open_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_open_chat_nickname"
            android:layout_marginStart="8dp"
            android:layout_alignBaseline="@id/text_open_chat_nickname"
            android:textSize="12sp"
            android:textColor="#bebed1" />
    </RelativeLayout>
</RelativeLayout>